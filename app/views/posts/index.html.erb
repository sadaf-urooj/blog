<div class="container">
  <h1>Listing Posts</h1>
  <%= link_to 'Create  Post', new_post_path, class: 'btn btn-dark btn-sm mb-2' %>
  <table class="table table-hover table-sm table-bordered border border-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th class="text-center">Actions</th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td class="w-25" ><%= post.title %></td>
        <td class="w-50"><%= post.content %></td>

        <td class="text-center w-25">
          <%= link_to 'View', post_path(post), class: "btn btn-outline-info btn-sm mr-1" %>
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-primary btn-sm mr-1" %>
          <%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>